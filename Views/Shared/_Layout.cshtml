<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patients</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-darkly.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/patients.css" asp-append-version="true" />
    @RenderSection("Styles", false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-transperant mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home"
                    asp-action="Index">Patients</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-container-pages">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home"
                                    asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Patients"
                                    asp-action="Patients">Patients</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="d-flex gap-3">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="legister btn" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                        <a class="legister btn" asp-area="" asp-controller="User" asp-action="LogIn">Log In</a>
                    }
                    else
                    {
                        <a class="text-white btn" asp-area="" asp-controller="User" asp-action="LogOut">Log Out</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name = "_Notification"/>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-elements">
            <div class="footer-logo">
                <a class="text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Patients</a>
            </div>
            <div>
                <a class="text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                |
                <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                |
                <a class="text-white" asp-area="" asp-controller="Patients" asp-action="Patients">Patients</a>
            </div>
            &copy; 2024 - Patients - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

        </div>
        <div class="footer-elements">
